OBJ_DIR = obj
SRC_DIR = src

SRCS = $(wildcard $(SRC_DIR)/*.c)
OBJS = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRCS))

CC = gcc
CFLAGS = -O1 -g -fno-omit-frame-pointer -fno-optimize-sibling-calls -D_FORTIFY_SOURCE=0 -fsanitize=address,undefined
LDFLAGS = -fsanitize=address,undefined

all: $(OBJ_DIR) rldns

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)

rldns: $(OBJS)
	$(CC) $(LDFLAGS) -o rldns $(OBJS)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	$(CC) $(CFLAGS) -c $< -o $@

clean: 
	rm -rf $(OBJ_DIR)/*.o rldns

install:
	rm -rf /usr/local//rldns;mkdir /usr/local//rldns
	mkdir /usr/local//rldns/zones
	cp rldns /usr/local//rldns
	cp rldns.conf /usr/local//rldns
	cp zones/* /usr/local//rldns/zones
	cp docs/rldns.1 /usr/share/man/man1
